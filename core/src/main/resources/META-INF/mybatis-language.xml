<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <!--https://plugins.jetbrains.com/docs/intellij/registering-file-type.html-->
        <!--<fileTypeFactory implementation="tk.cofe.plugin.mbsp.MbspFileTypeFactory"/>-->
        <fileType name="MBSP" implementationClass="tk.cofe.plugin.mbsp.MbspFileType"
                  fileNames="INSTANCE" language="MBSP" extensions="mbsp"/>

        <lang.parserDefinition language="MBSP" implementationClass="tk.cofe.plugin.mbsp.MbspParserDefinition"/>

        <multiHostInjector implementation="tk.cofe.plugin.mybatis.inject.MbspParamInject"/>
        <multiHostInjector implementation="tk.cofe.plugin.mybatis.inject.MbspConditionInject"/>

        <completion.contributor language="MBSP"
                                implementationClass="tk.cofe.plugin.mybatis.completion.MbspFileSqlParameterCompletionContributor"/>
        <psi.referenceContributor language="MBSP"
                                  implementation="tk.cofe.plugin.mybatis.psi.reference.MbspReferenceContributor"/>

    </extensions>

</idea-plugin>